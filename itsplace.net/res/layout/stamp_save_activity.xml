<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:padding="10dp" 
        android:background="#000">
    	
    	<TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:text="스탬프 적립" 
		        />
    	 <EditText android:id="@+id/fCode"  
              	  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dip"
                  android:layout_marginBottom="20dip"   
                  android:singleLine="true" android:padding="5dip"  android:background="@layout/shape_edittext"
                  />
           <Button android:id="@+id/btnStampSave"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dip"  
                  android:padding="10dp" 
                  android:text="적립"   android:background="@layout/shape_button"
                 />
</LinearLayout>